# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                    Professional Video Downloader Bot                         ║
# ║                         Environment Configuration                            ║
# ║                                                                              ║
# ║  Instructions:                                                               ║
# ║  1. Copy this file to .env                                                   ║
# ║  2. Fill in all REQUIRED values                                              ║
# ║  3. Adjust OPTIONAL values as needed                                         ║
# ║  4. Never commit .env to version control!                                    ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

# ═══════════════════════════════════════════════════════════════════════════════
# TELEGRAM API CREDENTIALS (REQUIRED)
# Get these from https://my.telegram.org/apps
# ═══════════════════════════════════════════════════════════════════════════════

# Telegram API ID (numeric)
API_ID=12345678

# Telegram API Hash (32 character string)
API_HASH=your_api_hash_here_32_characters

# Bot Token from @BotFather
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ═══════════════════════════════════════════════════════════════════════════════
# ADMIN CONFIGURATION (REQUIRED)
# ═══════════════════════════════════════════════════════════════════════════════

# Bot Owner's Telegram User ID (numeric)
# Get your ID from @userinfobot
OWNER_ID=123456789

# Additional Admin IDs (comma-separated, optional)
# Example: ADMIN_IDS=111111111,222222222,333333333
ADMIN_IDS=

# ═══════════════════════════════════════════════════════════════════════════════
# LANGUAGE SETTINGS
# ═══════════════════════════════════════════════════════════════════════════════

# Default language for new users
# Options: fa (Persian), en (English)
DEFAULT_LANGUAGE=fa

# Fallback language when translation is missing
FALLBACK_LANGUAGE=en

# ═══════════════════════════════════════════════════════════════════════════════
# DOWNLOAD SETTINGS
# ═══════════════════════════════════════════════════════════════════════════════

# Default video quality
# Options: 2160, 1440, 1080, 720, 480, 360, 240, audio, best, auto
DEFAULT_QUALITY=1080

# Maximum file size in bytes (default: 2GB for Telegram Premium)
# 2147483648 = 2 GB
# 52428800 = 50 MB (standard Telegram limit)
MAX_FILE_SIZE=2147483648

# Download chunk size in bytes (default: 1MB)
CHUNK_SIZE=1048576

# Maximum retry attempts for failed downloads
MAX_RETRIES=3

# Download timeout in seconds (default: 1 hour)
DOWNLOAD_TIMEOUT=3600

# Number of concurrent download fragments (for faster downloads)
CONCURRENT_FRAGMENTS=4

# Prefer FFmpeg for merging (true/false)
PREFER_FFMPEG=true

# Output format for merged videos
MERGE_OUTPUT_FORMAT=mp4

# ═══════════════════════════════════════════════════════════════════════════════
# FFMPEG CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════

# Path to FFmpeg binary (leave empty for auto-detection)
# Examples:
# Linux: /usr/bin/ffmpeg
# macOS: /opt/homebrew/bin/ffmpeg
# Windows: C:\ffmpeg\bin\ffmpeg.exe
FFMPEG_PATH=

# ═══════════════════════════════════════════════════════════════════════════════
# RATE LIMITING
# ═══════════════════════════════════════════════════════════════════════════════

# Enable rate limiting (true/false)
ENABLE_RATE_LIMIT=true

# Maximum downloads per user per day
DAILY_LIMIT=50

# Maximum concurrent downloads per user
CONCURRENT_LIMIT=5

# VIP user daily limit
VIP_DAILY_LIMIT=200

# VIP user concurrent limit
VIP_CONCURRENT_LIMIT=10

# Global maximum concurrent downloads (all users)
GLOBAL_CONCURRENT_LIMIT=50

# Cooldown period after rate limit exceeded (seconds)
COOLDOWN_PERIOD=60

# ═══════════════════════════════════════════════════════════════════════════════
# CACHING SETTINGS
# ═══════════════════════════════════════════════════════════════════════════════

# Enable caching (true/false)
CACHE_ENABLED=true

# Cache time-to-live in seconds (default: 5 minutes)
CACHE_TTL=300

# Maximum number of cached items
CACHE_MAX_SIZE=1000

# Cache thumbnails (true/false)
CACHE_THUMBNAILS=true

# Cache video metadata (true/false)
CACHE_METADATA=true

# ═══════════════════════════════════════════════════════════════════════════════
# DIRECTORY PATHS
# ═══════════════════════════════════════════════════════════════════════════════

# Temporary files directory
TEMP_DIR=./temp

# Downloads directory
DOWNLOADS_DIR=./downloads

# Cookie files directory
COOKIES_DIR=./cookies

# Cache directory
CACHE_DIR=./cache

# Log files directory
LOG_DIR=./logs

# Database directory
DATABASE_DIR=./database

# ═══════════════════════════════════════════════════════════════════════════════
# LOGGING CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Maximum log file size in bytes (default: 10MB)
LOG_MAX_BYTES=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=30

# Use JSON format for logs (true/false)
LOG_JSON_FORMAT=false

# Write logs to file (true/false)
LOG_TO_FILE=true

# Write logs to console (true/false)
LOG_TO_CONSOLE=true

# ═══════════════════════════════════════════════════════════════════════════════
# SECURITY SETTINGS
# ═══════════════════════════════════════════════════════════════════════════════

# Encryption key for cookies (32 bytes, base64 encoded)
# Generate with: python -c "import secrets; import base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
# Leave empty to auto-generate (not recommended for production)
ENCRYPTION_KEY=

# Enable cookie encryption (true/false)
COOKIE_ENCRYPTION=true

# Secure file deletion (overwrite before delete)
SECURE_DELETE=true

# Enable input sanitization (true/false)
INPUT_SANITIZATION=true

# Maximum cookie file size in bytes (default: 1MB)
MAX_COOKIE_SIZE=1048576

# ═══════════════════════════════════════════════════════════════════════════════
# DATABASE SETTINGS
# ═══════════════════════════════════════════════════════════════════════════════

# Enable database (true/false)
DATABASE_ENABLED=true

# Database file path
DATABASE_PATH=./database/bot.db

# Connection pool size
DB_POOL_SIZE=5

# Database query timeout in seconds
DB_TIMEOUT=30

# Enable automatic backups (true/false)
DB_BACKUP_ENABLED=true

# Backup interval in seconds (default: 24 hours)
DB_BACKUP_INTERVAL=86400

# ═══════════════════════════════════════════════════════════════════════════════
# FEATURE FLAGS
# ═══════════════════════════════════════════════════════════════════════════════

# Enable cookie upload feature (true/false)
ENABLE_COOKIES=true

# Enable download history (true/false)
ENABLE_HISTORY=true

# Enable user statistics (true/false)
ENABLE_STATS=true

# Enable admin panel (true/false)
ENABLE_ADMIN_PANEL=true

# Enable broadcast feature (true/false)
ENABLE_BROADCAST=true

# Enable VIP system (true/false)
ENABLE_VIP_SYSTEM=true

# ═══════════════════════════════════════════════════════════════════════════════
# MAINTENANCE MODE
# ═══════════════════════════════════════════════════════════════════════════════

# Enable maintenance mode (true/false)
MAINTENANCE_MODE=false

# Maintenance message to show users
MAINTENANCE_MESSAGE=Bot is under maintenance. Please try again later.

# ═══════════════════════════════════════════════════════════════════════════════
# PYROGRAM SETTINGS
# ═══════════════════════════════════════════════════════════════════════════════

# Session name for Pyrogram
SESSION_NAME=video_downloader_bot

# Number of Pyrogram workers
WORKERS=8

# Maximum concurrent file transmissions
MAX_CONCURRENT_TRANSMISSIONS=4

# ═══════════════════════════════════════════════════════════════════════════════
# ADVANCED SETTINGS (Usually no need to change)
# ═══════════════════════════════════════════════════════════════════════════════

# Video info extraction timeout (seconds)
VIDEO_INFO_TIMEOUT=30

# Upload timeout (seconds)
UPLOAD_TIMEOUT=1800

# Progress update interval (seconds)
PROGRESS_UPDATE_INTERVAL=2.0

# Connection timeout (seconds)
CONNECTION_TIMEOUT=30

# Read timeout (seconds)
READ_TIMEOUT=60

# Retry delay (seconds)
RETRY_DELAY=1.0

# Cookie expiry warning days
COOKIE_EXPIRY_WARNING_DAYS=7